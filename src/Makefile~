CPP    = /usr/bin/g++
CFLAGS = --std=c++11 -Wall
INCLUDEDIR = $(pwd)
SOURCEDIR = libgcm

SOURCES = $(shell find $(SOURCEDIR) -name '*.cpp')
OBJECTS = $(SOURCES:%.cpp=%.o)

EXECUTABLE=gcm

all: $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CPP) $(OBJECTS) -o $@ -lgsl -lgslcblas -lm

%.o: %.cpp
	$(CPP) $(CFLAGS) -I $(INCLUDEDIR) -c $< -o $@

clean:
	rm -f $(OBJECTS)
	rm -f $(EXECUTABLE)
